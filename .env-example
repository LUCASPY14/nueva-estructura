# Variables de entorno para LG Service

# Django
DJANGO_SECRET_KEY=your-secure-secret-key-here
DJANGO_DEBUG=0

# Base de datos PostgreSQL
PGDATABASE=lgservice
PGUSER=db_user
PGPASSWORD=secure_password_here
PGHOST=db
PGPORT=5432

# Email
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=user@example.com
EMAIL_HOST_PASSWORD=secure_email_password
EMAIL_USE_TLS=1
DEFAULT_FROM_EMAIL=no-reply@lgservice.com

# Código de override para ventas
VENTA_OVERRIDE_CODE=secure-override-code
